@model Cart

<h2>Your Cart</h2>

@if(Model != null && Model.CartItems.Count > 0)
{
<div class="content-container-viewcart">
        <table class="table table-hover table-dark">
        <thead>
                <tr class="cont">
                    <th class="text-light pb-2">
                        <i class="bi bi-cart"></i> Shopping cart
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>

                </tr>
            <tr class="mb-2">
                <th ></th>
                    <th >Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr >
                    <td ><img height="150" src="@Url.Action("GetImage", "Home", new { id = item.Product.Id })" /></td>
                    <td >@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price</td>
                    <td>
                            <button onclick="location.href='@Url.Action("DeleteItemFromCart", "Home", new { id = item.Id })'">
                            <i class="bi bi-trash3-fill"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="text-right">
    <button class="btn btn-dark bg-dark mt-3" onclick="location.href='@Url.Action("Buy", "Home")'">Buy</button>
    </div>
}
else
{
    <div class="content-container  text-light"><h2>Your cart is empty!</h2></div>
    <br />
    <button class="btn btn-dark bg-dark" onclick="location.href='@Url.Action("Index", "Home")'">Back to mainpage</button>
    
}
<style scoped>
    .content-container-viewcart {
        
        margin-top: 50px;
        border-radius: 40px;
    }


    td {
        vertical-align: middle;
    }

   
</style>
